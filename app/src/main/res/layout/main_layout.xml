<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubble_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bubble_bg"
    android:padding="16dp"
    android:elevation="12dp"
    android:gravity="center_horizontal">

    <!-- Hiển thị tốc độ (đưa lên trên và căn giữa) -->
    <TextView
        android:id="@+id/txt_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 km/h"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Cuộn ngang các nút -->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Các nút bấm -->
            <Button
                android:id="@+id/btn_bluetooth"
                android:layout_width="90dp"
                android:layout_height="64dp"
                android:background="@drawable/ripple_white"
                android:text="Mặc định 1"
                android:layout_marginEnd="16dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="90dp"
                android:layout_height="64dp"
                android:background="@drawable/ripple_white"
                android:text="Mặc định 2"
                android:layout_marginEnd="16dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="90dp"
                android:layout_height="64dp"
                android:background="@drawable/ripple_white"
                android:text="Mặc định 3"
                android:layout_marginEnd="16dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="90dp"
                android:layout_height="64dp"
                android:background="@drawable/ripple_white"
                android:text="Mặc định 4"
                android:layout_marginEnd="16dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="90dp"
                android:layout_height="64dp"
                android:background="@drawable/ripple_white"
                android:text="Mặc định 5"
                android:layout_marginEnd="16dp"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/btn_voice"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/ripple_white"
                android:src="@drawable/ic_mic"
                android:layout_marginEnd="16dp"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
